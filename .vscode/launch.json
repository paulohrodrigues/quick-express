{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serve (nodemon)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "nodemon"
      ],
      "restart": true,
      "port": 9229,
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "console": "integratedTerminal"
    }
  ]
}